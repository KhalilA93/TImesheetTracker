# Backend Environment Variables Template
# Copy this file to .env for local development
# Set these variables in your hosting service dashboard for production

# MongoDB Connection String
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/your-database?retryWrites=true&w=majority

# JWT Secret (generate a secure random string)
JWT_SECRET=your-very-secure-jwt-secret-string-here

# Environment
NODE_ENV=development

# Port (many hosting services set this automatically)
PORT=5000

# CORS Allowed Origins (comma-separated)
# Examples:
# For Render: ALLOWED_ORIGINS=https://your-frontend.onrender.com
# For Railway: ALLOWED_ORIGINS=https://your-frontend.railway.app
# For Netlify: ALLOWED_ORIGINS=https://your-site.netlify.app
ALLOWED_ORIGINS=http://localhost:3000

# JWT Configuration (for future authentication)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Email Configuration (for future notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password

# Notification Settings
ENABLE_PUSH_NOTIFICATIONS=true
NOTIFICATION_POLLING_INTERVAL=30000
